---
interface Props {
  title: string;
  variant: "primary" | "secondary";
  href?: string;
  type?: "submit";
}

const { title, variant, href, type } = Astro.props;

const classList =
  variant === "primary"
    ? ["bg-brand-500 hover:bg-brand-400"]
    : ["border-2 border-brand-500 hover:text-brand-400"];
---

<button
  class:list={[
    "rounded-full px-6 py-2 font-phudu text-50 desktop:text-100 w-fit",
    classList,
  ]}
  type={type}
>
  {href && <a href={href}>{title}</a>}
  {type && title}
</button>
